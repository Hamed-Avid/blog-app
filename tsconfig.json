{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src/",
    "paths": {
      "@/utils/*": ["utils/*"],
      "@/lib/*": ["lib/*"],
      "@/ui/*": ["components/ui/*"],
      "@/constants/*": ["constants/*"],
      "@/components/*": ["components/*"],
      "@/context/*": ["context/*"],
      "@/common/*": ["common/*"],
      "@/pages/*": ["app/*"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"],
      "@/public/*": ["./public/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/providers/*": ["providers/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(dashboard)/profile/page.tsx"
  ],
  "exclude": ["node_modules"]
}
